<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical|center"
            android:background="@color/logo_color"
            android:text="@string/my_own_road_ride"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
            <TableRow>
                <ImageButton
                    android:id="@+id/settingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft ="15dp"
                    android:layout_marginTop ="15dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/setting2" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/userNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/user_name"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black_string_color"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/sir"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black_string_color"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/usersquare" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/manageReviewBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent_color"
            android:gravity="left|center_vertical"
            android:text="@string/mange_my_review"
            android:textColor="@color/black_string_color"
            android:textStyle="bold"
            android:textSize="24dp"
            android:shadowColor="@color/black_string_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
        <Button
            android:id="@+id/checkedDestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent_color"
            android:gravity="left|center_vertical"
            android:text="@string/checked_destination"
            android:textColor="@color/black_string_color"
            android:textStyle="bold"
            android:textSize="24dp"
            android:shadowColor="@color/black_string_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
        <Button
            android:id="@+id/listDestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent_color"
            android:gravity="left|center_vertical"
            android:text="@string/list_destination_interest"
            android:textColor="@color/black_string_color"
            android:textStyle="bold"
            android:textSize="24dp"
            android:shadowColor="@color/black_string_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
        <Button
            android:id="@+id/recommendScheduleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent_color"
            android:gravity="left|center_vertical"
            android:text="@string/recommended_schedule"
            android:textColor="@color/black_string_color"
            android:textStyle="bold"
            android:textSize="24dp"
            android:shadowColor="@color/black_string_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>